<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/collapsing_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_overlapTop="124dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="1024dp"
            android:padding="12dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cardProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="74dp">

                    <TextView
                        android:id="@+id/tvName"
                        style="@style/Item.Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:gravity="center"
                        android:text="Alejandro Carbajo Vidales"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="0dp" />

                    <TextView
                        android:id="@+id/tvLocation"
                        style="@style/Item.SubHead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Madrid, Madrid"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvName" />

                    <TextView
                        android:id="@+id/tvAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="28 años"
                        style="@style/Item.SubHead"
                        app:layout_constraintTop_toBottomOf="@+id/tvLocation" />

                    <ImageButton
                        android:id="@+id/btnPhone"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:contentDescription="699 79 08 87"
                        android:padding="8dp"
                        android:tint="@color/primary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvAge"
                        app:srcCompat="@drawable/ic_phone" />

                    <ImageButton
                        android:id="@+id/btnEmail"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:padding="8dp"
                        android:tint="@color/primary"
                        app:layout_constraintEnd_toStartOf="@+id/btnWeb"
                        app:layout_constraintStart_toEndOf="@+id/btnPhone"
                        app:layout_constraintTop_toBottomOf="@+id/tvAge"
                        app:srcCompat="@drawable/ic_email" />

                    <ImageButton
                        android:id="@+id/btnWeb"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp"
                        android:padding="8dp"
                        android:tint="@color/primary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvAge"
                        app:srcCompat="@drawable/ic_web" />

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>


            <ImageButton
                android:id="@+id/btnGitHub"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@+id/cardProfile"
                app:layout_constraintStart_toStartOf="@+id/cardProfile"
                app:layout_constraintTop_toBottomOf="@+id/cardProfile"
                app:srcCompat="@drawable/ic_github" />

            <TextView
                android:id="@+id/tvAwesome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/lobster_two"
                android:gravity="center"
                android:padding="8dp"
                android:text="'Elige un trabajo que te guste y no tendrás que trabajar ni un día de tu vida.'"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/btnGitHub" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:scaleType="centerCrop"
        app:elevation="10dp"
        app:layout_anchor="@id/cardProfile"
        app:layout_anchorGravity="top|center"
        tools:src="@drawable/profile" />

</android.support.design.widget.CoordinatorLayout>
